{
    "heading": {
        "prefix": "heading",
        "body": [
            "## ${1:lang}"
        ]
    },

    "add checkbox": {
        "prefix": "checkbox",
        "body": [
            "[ ]"
        ]
    },

    "add codeblock": {
        "prefix": "codeblock",
        "body": [
            "```${1:lang}",
            "```"
        ]
    },

    "add pipetable": {
        "prefix": "pipetable",
        "body": [
            "| ${1:} | ${2:} |",
            "| - | - |",
            "| | |"
        ]
    },

    "new task": {
        "prefix": "task",
        "body": [
            "- [ ] ${1:new_task} [p${2:1}] [#${3:tag}] [${4:01/01/1970}]"
        ]
    }

}

